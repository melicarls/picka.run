<body>

  <header>
    <nav class="grey">
      <div class="nav-wrapper">
        <a href="/routes" class="brand-logo">picka.run</a>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
          <li><%= link_to "About", root_path %></li>
          <% if !current_user %>
            <li><%= link_to "Let's Go", login_path %></li>
          <% else %>
            <li>
              <a href="/users/<%= current_user.id %>"><%= current_user.first_name %></a></li>
            <li><%= link_to "Log Out", logout_path %></li>
          <% end %>
        </ul>
      </div>
    </nav>
  </header>

  <main>
    <div ng-view></div>
  </main>

  <footer class="page-footer grey">
    <div class="footer-copyright">
      <div class="container">
        Created by <a href="http://www.melicarls.com" target="_blank">Melissa Carlson</a>
      <a class="grey-text text-lighten-4 right" href="#!">Check out picka.run on GitHub</a>
      </div>
    </div>
  </footer>

</body>
